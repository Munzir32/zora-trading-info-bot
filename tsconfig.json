{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",  // Ensure JS files are output to 'dist/'
    "rootDir": "./src",  // Ensure the 'src' folder is where your source code lives
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false  // Ensure emitting of JS files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
